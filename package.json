{
  "name": "@ephemushroom/opencode-claude-mem",
  "version": "0.1.0",
  "description": "OpenCode plugin for Claude-Mem persistent memory system",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outfile dist/index.js --target bun --format esm --external @opencode-ai/plugin && tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "oxlint",
    "fmt": "oxfmt --write src/",
    "fmt:check": "oxfmt --check src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": [
    "opencode",
    "claude-mem",
    "memory",
    "plugin",
    "persistent-memory"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ephemushroom/opencode-claude-mem.git"
  },
  "bugs": {
    "url": "https://github.com/Ephemushroom/opencode-claude-mem/issues"
  },
  "homepage": "https://github.com/Ephemushroom/opencode-claude-mem#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@opencode-ai/plugin": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "typescript": "^5.0.0"
  }
}
